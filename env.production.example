# Production Environment Variables for Lawrei Beauty Website
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://username:password@host/database?sslmode=require
NODE_ENV=production

# ========================================
# STRIPE PAYMENT CONFIGURATION
# ========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ========================================
# EMAIL SERVICE CONFIGURATION
# ========================================
# Option 1: SendGrid (Recommended)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Lawrei Beauty

# Option 2: AWS SES
# EMAIL_SERVICE=ses
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# EMAIL_FROM=noreply@yourdomain.com

# Option 3: Gmail SMTP
# EMAIL_SERVICE=gmail
# GMAIL_USER=your-email@gmail.com
# GMAIL_PASSWORD=your_app_password_here
# EMAIL_FROM=your-email@gmail.com

# ========================================
# SMS SERVICE CONFIGURATION (TWILIO)
# ========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# GOOGLE CALENDAR CONFIGURATION
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_CALENDAR_ID=primary
TIMEZONE=America/New_York

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your_very_long_random_jwt_secret_here_minimum_32_characters

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
CORS_ORIGIN=https://yourdomain.com

# ========================================
# BUSINESS INFORMATION
# ========================================
BUSINESS_ADDRESS=123 Beauty Street, City, State 12345
BUSINESS_PHONE=+1-555-123-4567
BUSINESS_EMAIL=info@yourdomain.com

# ========================================
# OPTIONAL: ANALYTICS & MONITORING
# ========================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Option 1: Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Option 2: AWS S3
# AWS_S3_BUCKET=your_bucket_name
# AWS_S3_REGION=us-east-1

# ========================================
# SECURITY CONFIGURATION
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here

# ========================================
# NOTIFICATION SETTINGS
# ========================================
SMS_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
CALENDAR_SYNC_ENABLED=true
APPOINTMENT_REMINDER_HOURS=24
PAYMENT_CONFIRMATION_ENABLED=true

# ========================================
# BUSINESS HOURS (for calendar availability)
# ========================================
BUSINESS_START_HOUR=9
BUSINESS_END_HOUR=18
BUSINESS_DAYS=1,2,3,4,5
# 1=Monday, 2=Tuesday, 3=Wednesday, 4=Thursday, 5=Friday, 6=Saturday, 0=Sunday

# ========================================
# CUSTOMER PORTAL SETTINGS
# ========================================
CUSTOMER_PORTAL_ENABLED=true
CANCELLATION_WINDOW_HOURS=24
RESCHEDULE_WINDOW_HOURS=2
MAX_BOOKINGS_PER_CUSTOMER=10

# ========================================
# PAYMENT SETTINGS
# ========================================
CURRENCY=usd
MINIMUM_BOOKING_AMOUNT=2500
REFUND_POLICY_DAYS=7
PAYMENT_METHODS=card,apple_pay,google_pay

# ========================================
# INTEGRATION WEBHOOKS
# ========================================
STRIPE_WEBHOOK_URL=https://yourdomain.com/api/payments/webhook
CALENDAR_WEBHOOK_URL=https://yourdomain.com/api/calendar/webhook
SMS_WEBHOOK_URL=https://yourdomain.com/api/sms/webhook

# ========================================
# DEVELOPMENT OVERRIDES (set to false in production)
# ========================================
DEBUG_MODE=false
MOCK_SERVICES=false
SKIP_EMAIL_VERIFICATION=false
SKIP_SMS_VERIFICATION=false

# ========================================
# BACKUP & MAINTENANCE
# ========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing maintenance. Please check back soon.

# ========================================
# PERFORMANCE & CACHING
# ========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
QUERY_TIMEOUT_MS=5000
MAX_CONCURRENT_REQUESTS=100

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/lawrei-beauty/app.log
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING=true
UPTIME_MONITORING=true

# ========================================
# CUSTOMIZATION & BRANDING
# ========================================
SITE_NAME=Lawrei Beauty
SITE_DESCRIPTION=Premium beauty salon services
BRAND_COLOR_PRIMARY=#FF69B4
BRAND_COLOR_SECONDARY=#F8BBD9
LOGO_URL=https://yourdomain.com/logo.png
FAVICON_URL=https://yourdomain.com/favicon.ico

# ========================================
# SOCIAL MEDIA INTEGRATION
# ========================================
FACEBOOK_PAGE_ID=your_facebook_page_id
INSTAGRAM_USERNAME=your_instagram_username
TWITTER_USERNAME=your_twitter_username
GOOGLE_MY_BUSINESS_ID=your_google_business_id

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
GOOGLE_PLACES_API_KEY=your_google_places_api_key
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
GOOGLE_TAG_MANAGER_ID=GTM_XXXXXXX
HOTJAR_ID=your_hotjar_id

# ========================================
# LEGAL & COMPLIANCE
# ========================================
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
GDPR_COMPLIANCE_ENABLED=true
COOKIE_CONSENT_ENABLED=true
ACCESSIBILITY_COMPLIANCE=true

# ========================================
# SUPPORT & CONTACT
# ========================================
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+1-555-123-4567
SUPPORT_HOURS=Monday-Friday 9AM-6PM EST
EMERGENCY_CONTACT=+1-555-999-8888

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_CALENDAR_SYNC=true
FEATURE_CUSTOMER_PORTAL=true
FEATURE_ONLINE_PAYMENTS=true
FEATURE_EMAIL_MARKETING=true
FEATURE_LOYALTY_PROGRAM=false
FEATURE_MOBILE_APP=false
FEATURE_MULTI_LOCATION=false

# ========================================
# TESTING & QUALITY ASSURANCE
# ========================================
TEST_MODE=false
MOCK_PAYMENTS=false
MOCK_SMS=false
MOCK_EMAIL=false
AUTO_APPROVE_TESTIMONIALS=false
SKIP_PAYMENT_VERIFICATION=false

# ========================================
# DEPLOYMENT & INFRASTRUCTURE
# ========================================
DEPLOYMENT_ENVIRONMENT=production
INFRASTRUCTURE_PROVIDER=render
CDN_ENABLED=true
SSL_ENFORCED=true
HTTP_STRICT_TRANSPORT_SECURITY=true
CONTENT_SECURITY_POLICY_ENABLED=true

# ========================================
# BACKUP & DISASTER RECOVERY
# ========================================
BACKUP_STRATEGY=automated
BACKUP_STORAGE=s3
BACKUP_ENCRYPTION=true
DISASTER_RECOVERY_PLAN=true
RTO_HOURS=4
RPO_HOURS=1

# ========================================
# COMPLIANCE & CERTIFICATIONS
# ========================================
PCI_COMPLIANCE=true
SOC2_COMPLIANCE=false
HIPAA_COMPLIANCE=false
ISO_27001_COMPLIANCE=false
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# ========================================
# MONITORING & ALERTING
# ========================================
MONITORING_SERVICE=datadog
ALERT_EMAIL=alerts@yourdomain.com
ALERT_SMS=+1-555-123-4567
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
PAGERDUTY_API_KEY=your_pagerduty_api_key

# ========================================
# API RATE LIMITING
# ========================================
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ========================================
# CUSTOMER EXPERIENCE
# ========================================
WELCOME_EMAIL_ENABLED=true
FOLLOW_UP_EMAIL_ENABLED=true
BIRTHDAY_EMAIL_ENABLED=true
LOYALTY_REWARDS_ENABLED=false
REFERRAL_PROGRAM_ENABLED=false
CUSTOMER_FEEDBACK_ENABLED=true

# ========================================
# BUSINESS INTELLIGENCE
# ========================================
ANALYTICS_ENABLED=true
REPORTING_ENABLED=true
DASHBOARD_ENABLED=true
EXPORT_ENABLED=true
REAL_TIME_MONITORING=true
PREDICTIVE_ANALYTICS=false

# ========================================
# INTEGRATION WEBHOOKS (OUTBOUND)
# ========================================
WEBHOOK_BOOKING_CREATED=https://external-service.com/webhook/booking
WEBHOOK_PAYMENT_COMPLETED=https://external-service.com/webhook/payment
WEBHOOK_APPOINTMENT_CANCELLED=https://external-service.com/webhook/cancellation
WEBHOOK_CUSTOMER_REGISTERED=https://external-service.com/webhook/customer

# ========================================
# SECURITY HEADERS
# ========================================
SECURITY_HEADERS_ENABLED=true
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY_ENABLED=true

# ========================================
# CACHE CONTROL
# ========================================
CACHE_CONTROL_ENABLED=true
STATIC_ASSETS_CACHE_MAX_AGE=31536000
API_RESPONSE_CACHE_MAX_AGE=300
USER_CONTENT_CACHE_MAX_AGE=3600
SEARCH_RESULTS_CACHE_MAX_AGE=1800

# ========================================
# ERROR HANDLING
# ========================================
ERROR_PAGE_ENABLED=true
CUSTOM_ERROR_PAGES=true
ERROR_LOGGING_ENABLED=true
ERROR_REPORTING_ENABLED=true
USER_FRIENDLY_ERROR_MESSAGES=true

# ========================================
# PERFORMANCE OPTIMIZATION
# ========================================
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true
BUNDLE_ANALYZER_ENABLED=false
LAZY_LOADING_ENABLED=true
IMAGE_OPTIMIZATION_ENABLED=true
CDN_OPTIMIZATION_ENABLED=true

# ========================================
# MOBILE OPTIMIZATION
# ========================================
MOBILE_FIRST_DESIGN=true
TOUCH_OPTIMIZED=true
MOBILE_APP_LINKS_ENABLED=false
PWA_ENABLED=false
MOBILE_PAYMENT_OPTIONS_ENABLED=true

# ========================================
# ACCESSIBILITY
# ========================================
ACCESSIBILITY_ENABLED=true
SCREEN_READER_SUPPORT=true
KEYBOARD_NAVIGATION_ENABLED=true
HIGH_CONTRAST_MODE_ENABLED=true
FONT_SIZE_ADJUSTMENT_ENABLED=true

# ========================================
# INTERNATIONALIZATION
# ========================================
I18N_ENABLED=false
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr
CURRENCY_FORMATTING_ENABLED=true
DATE_FORMATTING_ENABLED=true
TIMEZONE_HANDLING_ENABLED=true

# ========================================
# A/B TESTING
# ========================================
AB_TESTING_ENABLED=false
AB_TESTING_SERVICE=none
VARIANT_TRACKING_ENABLED=false
CONVERSION_TRACKING_ENABLED=false
EXPERIMENT_ANALYTICS_ENABLED=false

# ========================================
# MACHINE LEARNING & AI
# ========================================
ML_ENABLED=false
AI_CHATBOT_ENABLED=false
RECOMMENDATION_ENGINE_ENABLED=false
PREDICTIVE_PRICING_ENABLED=false
AUTOMATED_SCHEDULING_ENABLED=false

# ========================================
# BLOCKCHAIN & CRYPTO
# ========================================
BLOCKCHAIN_ENABLED=false
CRYPTO_PAYMENTS_ENABLED=false
NFT_INTEGRATION_ENABLED=false
SMART_CONTRACTS_ENABLED=false
DECENTRALIZED_IDENTITY_ENABLED=false

# ========================================
# FUTURE FEATURES (PLANNED)
# ========================================
VIRTUAL_CONSULTATIONS_ENABLED=false
AR_TRY_ON_ENABLED=false
VOICE_ASSISTANT_ENABLED=false
WEARABLE_INTEGRATION_ENABLED=false
SMART_MIRROR_INTEGRATION_ENABLED=false

